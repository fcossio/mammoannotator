<View style="display: flex">
    <View style="flex: 80%">
        <BrushLabels name="labels" toName="image">
            <Label value="Cancer" background="#FF0000"/>
            <Label value="DCIS" background="#FF6600" />
            <Label value="Lgll met" background="#9900CC"/>
            <Label value="Lgll normal" background="#FFFF00"/>
            <Label value="Cyst" background="#6666FF"/>
            <Label value="Benign lesion" background="#33CC00"/>
            <Label value="Nipple" background="#FF66CC"/>
            <Label value="Uncertain Cancer" background="#663300"/>
        </BrushLabels>
        <View>
            <Image name="image" 
                value="$image_path" 
                width="720px" 
                maxWidth="1500px" 
                zoom="true" 
                brightnessControl="true" 
                contrastControl="true"
                />
        </View>
    </View>
    <View style="flex: 20%; margin-left: 1rem; width: 25vw">
        <Header value="PatientID"/>
        <Text value="$patient_id" name="patient_id"/> 
        <Header value="StudyID"/>
        <Text value="$study_id" name="study_id"/>
        <Header value="Assessment"/>
        <View style="display: no-flex; height:35vh; overflow-y: scroll; width:100%; overflow-x: visible;">
            <Text name="assessment" value="$assessment"/>  
        </View>
        <Header value="Annotation comments"/>
        <TextArea 
            name="comments"
            toName="image" 
            placeholder="Your comments here" 
            rows="3"
            maxSubmissions="1"/>
    </View>   
</View>
